Public Function NormalizeID(ByVal s As String) As String
    Dim t As String
    t = Trim$(s)
    t = Replace(t, " ", "_")
    t = Replace(t, ";", "_")
    t = Replace(t, ":", "_")
    t = Replace(t, "/", "_")
    t = Replace(t, "\", "_")
    t = Replace(t, "(", "_")
    t = Replace(t, ")", "_")
    t = Replace(t, "[", "_")
    t = Replace(t, "]", "_")
    t = Replace(t, ".", "_")
    NormalizeID = UCase$(t)
End Function

Private Function PolicyValue(ByVal key As String, ByVal defaultVal As String) As String
