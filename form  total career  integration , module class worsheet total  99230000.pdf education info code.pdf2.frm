        Dim Meta As Scripting.Dictionary
        Set Meta = New Scripting.Dictionary
        Meta("Description") = desc
        Meta("Tags") = tag
        Meta("AccessType") = IIf(Len(access) > 0, access, "Paid")
        Meta("AccessDays") = IIf(IsEmpty(days) Or Len(days) = 0, "", days)
        Meta("CPE") = cpe
